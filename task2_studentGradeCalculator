import java.util.Scanner;

public class studentgrade {

	public static void main(String[] args) {
		// Java Program to Enter Marks of Subjects and Calculate Total marks, Percentage, and Grade
		
		        Scanner s = new Scanner(System.in);
		        System.out.println("Enter the marks of five subjects: \n");

		  
		        float subject_1 = s.nextFloat();
		        float subject_2 = s.nextFloat();
		        float subject_3 = s.nextFloat();
		        float subject_4 = s.nextFloat();
		        float subject_5 = s.nextFloat();

		        float total;
		        float average;
		        float percentage;
		        char grade;

		        
		        total = subject_1 + subject_2 + subject_3 + subject_4 + subject_5;
		        average = (float)(total / 5.0);
		        

		    
		        if (average >= 90)
		            grade = 'A';
		        else if (average >= 80 && average < 90)
		            grade = 'B';
		        else if (average >= 70 && average< 80)
		            grade = 'C';
		        else if (average>= 60 && average < 70)
		            grade = 'D';
		        else
		            grade = 'E';

		        
		        System.out.println("\n Total marks = " + total );
		        System.out.println(" Average Percentage = " + average);
		        System.out.println(" Grade         = '" + grade + "'");
		    }
		}
		 
		

	


